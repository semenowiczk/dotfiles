tap "homebrew/bundle"
tap "homebrew/core"
tap "lotyp/homebrew-formulae"

# core/dotfiles
brew "bats-core" # Bats-core: Bash Automated Testing System https://github.com/bats-core/bats-core
brew "coreutils" # Coreutils - GNU core utilities https://www.gnu.org/software/coreutils/
brew "lotyp/formulae/dockutil" # dockutil is a command line utility for managing macOS dock items. https://github.com/kcrawford/dockutil
brew "mackup" # Keep your application settings in sync. https://github.com/lra/mackup
brew "nano" # Free (GNU) replacement for the Pico text editor https://www.nano-editor.org/
brew "stow" # Organize software neatly under a single directory tree (e.g. /usr/local) https://www.gnu.org/software/stow/
brew "thefuck" # Programmatically correct mistyped console commands https://github.com/nvbn/thefuck
brew "topgrade" # Upgrade all the things https://github.com/topgrade-rs/topgrade

# fs/network
brew "bat" # Clone of cat(1) with syntax highlighting and Git integration https://github.com/sharkdp/bat
brew "croc" # Securely send things from one computer to another https://github.com/schollz/croc
brew "httpie" # User-friendly cURL replacement (command-line HTTP client) https://httpie.io/
brew "ssh-copy-id" # Add a public key to a remote machine's authorized_keys file https://www.openssh.com/
brew "tree" # Display directories as trees (with optional color/HTML output) http://mama.indstate.edu/users/ice/tree/
brew "unar" # Command-line unarchiving tools supporting multiple formats https://theunarchiver.com/command-line
brew "wget" # Internet file retriever https://www.gnu.org/software/wget/
brew "zoxide" # Shell extension to navigate your filesystem faster https://github.com/ajeetdsouza/zoxide
brew "syncthing"
brew "mc"

# search/grep/diff
