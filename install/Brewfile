brew "difftastic" # Diff that understands syntax https://github.com/Wilfred/difftastic
brew "fd" # Simple, fast and user-friendly alternative to find https://github.com/sharkdp/fd
brew "fzf" # Command-line fuzzy finder written in Go https://github.com/junegunn/fzf
brew "gnu-sed" # GNU implementation of the famous stream editor https://www.gnu.org/software/sed/
brew "grep" # GNU grep, egrep and fgrep https://www.gnu.org/software/grep/
brew "jq" # Lightweight and flexible command-line JSON processor https://stedolan.github.io/jq/
brew "psgrep" # Shortcut for the 'ps aux | grep' idiom https://github.com/jvz/psgrep
brew "the_silver_searcher" # Also known as: ag, Code-search similar to ack https://github.com/ggreer/the_silver_searcher

